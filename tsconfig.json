{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./types",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "DOM"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "jsx": "react",
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/__tests__/*"],
}
