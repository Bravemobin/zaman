{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
  },
  "include": ["src/**/*", "client/**/*"],
  "exclude": ["node_modules"]
}
